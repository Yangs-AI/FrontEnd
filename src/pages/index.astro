---
import Layout from '../layouts/Layout.astro';
import Container from '../layouts/Container.astro';
import Link from '../layouts/modules/Link.astro';
const features = [
	{
		title: "Younger",
		description: "features.astro",
		icon: "bx:bxs-briefcase",
		url: "https://astro.build/",
	},
	{
		title: "YoungerBench",
		description: "features.alpine",
		icon: "bx:bxs-window-alt",
		url: "https://alpinejs.dev/",
	},
]
---

<Layout>
  <Container>
<div class="relative isolate pt-14">
  <div class="sm:pt-10">
    <div class="mx-auto max-w-7xl">
      <div class="mx-auto max-w-2xl text-center">
        <h1 class="text-4xl font-bold tracking-tight text-black dark:text-white sm:text-6xl">Explore The Real-World</h1>
        <p class="mt-6 text-lg leading-8 text-gray-900 dark:text-gray-100">Explore The Real-World</p>
        <div class="mt-10 flex items-center justify-center gap-x-2 md:gap-x-6">
					<Link href="https://github.com/YangsCloud">Find More ... </Link>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="relative mx-auto max-w-5xl px-6 lg:px-8">
  <div class="mx-auto max-w-2xl lg:text-center">
    <h2 class="text-base font-semibold leading-7 text-black dark:text-white">{"features.title"}</h2>
    <p class="mt-2 text-3xl font-bold tracking-tight text-black dark:text-white sm:text-4xl">{"features.subtitle"}</p>
    <p class="mt-6 text-lg leading-8 text-gray-900 dark:text-gray-100">
      {"features.description"}
    </p>
  </div>
  <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
    <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
      {
        features.map((item) => (
          <div class="flex flex-col">
            <dt class="flex items-center gap-x-3 text-base font-semibold leading-7 text-black dark:text-white">
              <div class="h-5 w-5 flex-none text-black dark:text-white">
              </div>
              {item.title}
            </dt>
            <dd class="mt-4 flex flex-auto flex-col text-base leading-7 text-gray-900 dark:text-gray-100">
              <p class="flex-auto">{item.description}</p>
              <p class="mt-6">
                <Link href={item.url} style="muted" size="xs" class="leading-6 text-left text-black dark:text-white">
                  {"features.learn_more"}{" "}
                  <span class="pl-1 text-black dark:text-white" aria-hidden="true">
                  </span>
                </Link>
              </p>
            </dd>
          </div>
        ))
      }
    </dl>
  </div>
</div>
  </Container>
</Layout>